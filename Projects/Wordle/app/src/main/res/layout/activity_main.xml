<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/guessCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guess"
        app:layout_constraintBottom_toBottomOf="@+id/et_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_simple"
        app:layout_constraintTop_toTopOf="@+id/et_simple" />


    <EditText
        android:id="@+id/et_simple"
        android:layout_width="240dp"
        android:layout_height="44dp"
        android:hint="@string/enter_4_letter_guess_here"
        android:inputType="text"
        android:maxLength="4"
        android:textAlignment="textStart"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.122"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.877" />

    <TextView
        android:id="@+id/guess1_left_top_text"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:text="GUESS #1"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/guess1_left_bottom_text"
        android:layout_width="189dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="GUESS #1 CHECK"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/guess1_left_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess1_left_top_text"
        app:layout_constraintTop_toBottomOf="@+id/guess1_left_top_text" />

    <TextView
        android:id="@+id/guess1_right_bottom_text"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:fontFamily="sans-serif-light"
        android:text=" "
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess1_left_bottom_text"
        app:layout_constraintEnd_toEndOf="@+id/guess1_right_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess1_right_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess1_left_bottom_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/guess1_right_top_text"
        android:layout_width="56dp"
        android:layout_height="26dp"
        android:text=" "
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess1_left_top_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/guess1_left_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess1_left_top_text"
        app:layout_constraintVertical_bias="0.333" />



<!--    Guess 2-->

    <TextView
        android:id="@+id/guess2_left_top_text"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:text="GUESS #2"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess1_left_top_text" />

    <TextView
        android:id="@+id/guess2_left_bottom_text"
        android:layout_width="189dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="GUESS #2 CHECK"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/guess2_left_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess2_left_top_text"
        app:layout_constraintTop_toBottomOf="@+id/guess2_left_top_text" />

    <TextView
        android:id="@+id/guess2_right_bottom_text"
        android:layout_width="56dp"
        android:layout_height="24dp"
        android:fontFamily="sans-serif-light"

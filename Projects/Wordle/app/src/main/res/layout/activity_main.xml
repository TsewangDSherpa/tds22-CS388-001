        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess2_left_bottom_text"
        app:layout_constraintEnd_toEndOf="@+id/guess2_right_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess2_right_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess2_left_bottom_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/guess2_right_top_text"
        android:layout_width="56dp"
        android:layout_height="26dp"
        android:text=" "
        android:textAlignment="textEnd"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess2_left_top_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/guess2_left_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess2_left_top_text"
        app:layout_constraintVertical_bias="0.333" />


<!--    guess 3-->

    <TextView
        android:id="@+id/guess3_left_top_text"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:text="GUESS #3"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess2_left_top_text" />

    <TextView
        android:id="@+id/guess3_left_bottom_text"
        android:layout_width="189dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="GUESS #3 CHECK"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/guess3_left_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess3_left_top_text"
        app:layout_constraintTop_toBottomOf="@+id/guess3_left_top_text" />

    <TextView
        android:id="@+id/guess3_right_bottom_text"
        android:layout_width="56dp"

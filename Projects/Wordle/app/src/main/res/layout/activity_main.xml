        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess3_left_bottom_text"
        app:layout_constraintEnd_toEndOf="@+id/guess3_right_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess3_right_top_text"

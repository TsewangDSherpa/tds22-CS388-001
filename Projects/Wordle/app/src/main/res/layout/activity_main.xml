<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/guessCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guess"
        app:layout_constraintBottom_toBottomOf="@+id/et_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/et_simple"
        app:layout_constraintTop_toTopOf="@+id/et_simple"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/et_simple"
        android:layout_width="250dp"
        android:layout_height="52dp"
        android:autofillHints="none"
        android:hint="@string/enter_4_letter_guess_here"
        android:inputType="text"
        android:maxLength="4"
        android:textAlignment="textStart"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.229"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.84000003" />

    <TextView
        android:id="@+id/guess1_left_top_text"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:text="@string/guess_1"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/et_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.231" />

    <TextView
        android:id="@+id/guess1_left_bottom_text"
        android:layout_width="189dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/guess_1_check"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/guess1_left_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess1_left_top_text"
        app:layout_constraintTop_toBottomOf="@+id/guess1_left_top_text" />

    <TextView
        android:id="@+id/guess1_right_bottom_text"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-light"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess1_left_bottom_text"
        app:layout_constraintEnd_toEndOf="@+id/guess1_right_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess1_right_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess1_left_bottom_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/guess1_right_top_text"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:text="@string/emptyString"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess1_left_top_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/guess1_left_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess1_left_top_text"
        app:layout_constraintVertical_bias="0.333"
        tools:text="HHHH" />



<!--    Guess 2-->

    <TextView
        android:id="@+id/guess2_left_top_text"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:text="@string/guess_2"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess1_left_top_text" />

    <TextView
        android:id="@+id/guess2_left_bottom_text"
        android:layout_width="189dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/guess_2_check"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/guess2_left_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess2_left_top_text"
        app:layout_constraintTop_toBottomOf="@+id/guess2_left_top_text" />

    <TextView
        android:id="@+id/guess2_right_bottom_text"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/emptyString"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess2_left_bottom_text"
        app:layout_constraintEnd_toEndOf="@+id/guess2_right_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess2_right_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess2_left_bottom_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/guess2_right_top_text"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:text="@string/emptyString"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess2_left_top_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/guess2_left_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess2_left_top_text"
        app:layout_constraintVertical_bias="0.333" />


<!--    guess 3-->

    <TextView
        android:id="@+id/guess3_left_top_text"
        android:layout_width="189dp"
        android:layout_height="29dp"
        android:layout_marginTop="80dp"
        android:text="@string/guess_3"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess2_left_top_text" />

    <TextView
        android:id="@+id/guess3_left_bottom_text"
        android:layout_width="189dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/guess_3_check"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/guess3_left_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess3_left_top_text"
        app:layout_constraintTop_toBottomOf="@+id/guess3_left_top_text" />

    <TextView
        android:id="@+id/guess3_right_bottom_text"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/emptyString"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess3_left_bottom_text"
        app:layout_constraintEnd_toEndOf="@+id/guess3_right_top_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/guess3_right_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess3_left_bottom_text"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/guess3_right_top_text"
        android:layout_width="84dp"
        android:layout_height="32dp"
        android:text="@string/emptyString"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/guess3_left_top_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintStart_toEndOf="@+id/guess3_left_top_text"
        app:layout_constraintTop_toTopOf="@+id/guess3_left_top_text"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/restartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restart"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.956" />

    <TextView
        android:id="@+id/revealWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textColor="#6F2626"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/et_simple"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guess3_left_bottom_text"
        app:layout_constraintVertical_bias="0.611" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="413dp"
        android:layout_height="57dp"
        android:background="#6A1C1C"
        android:fontFamily="sans-serif-condensed-light"
        android:paddingTop="5dp"
        android:text="@string/wordle_game"
        android:textAlignment="center"
        android:textColor="#FFFAFA"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/streaksText"
        android:layout_width="146dp"
        android:layout_height="23dp"
        android:layout_marginTop="13dp"
        android:text="@string/streaks_0"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.097" />

    <TextView
        android:id="@+id/colors"
        android:layout_width="52dp"
        android:layout_height="19dp"
        android:layout_marginEnd="20dp"
        android:background="#6C60D3"
        android:paddingLeft="2dp"
        android:text="@string/colors"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/objects"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/foods"
        android:layout_width="45dp"
        android:layout_height="19dp"
        android:background="#6C60D3"
        android:paddingLeft="2dp"
        android:text="@string/foods"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/animals"
        app:layout_constraintHorizontal_bias="0.787"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/nature"
        android:layout_width="47dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"
        android:background="#6C60D3"
        android:paddingLeft="2dp"
        android:text="@string/nature"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/colors"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/objects"
        android:layout_width="53dp"
        android:layout_height="20dp"
        android:layout_marginEnd="36dp"
        android:background="#6C60D3"
        android:paddingLeft="2dp"
        android:text="@string/objects"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/animals"
        android:layout_width="58dp"
        android:layout_height="19dp"
        android:layout_marginEnd="16dp"

        android:background="#6C60D3"
        android:paddingLeft="2dp"
        android:text="@string/animals"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/nature"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.132" />

    <TextView
        android:id="@+id/categoryText"
        android:layout_width="261dp"
        android:layout_height="20dp"
        android:text="@string/next_word_from_colors"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/streaksText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.553"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.58" />


</androidx.constraintlayout.widget.ConstraintLayout>
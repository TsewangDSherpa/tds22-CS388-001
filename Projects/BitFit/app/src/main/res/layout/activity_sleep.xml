<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8778A9">

    <TextView
        android:id="@+id/averageSleepTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ADB2D9"
        android:fontFamily="monospace"
        android:padding="16dp"
        android:text="Average Sleep Time: 0.0 hours"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/averageHappinessLevelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EBB40A"
        android:fontFamily="monospace"
        android:padding="16dp"
        android:text="Average Happiness Level: 0/10"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/averageSleepTimeTextView" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sleepRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/plainbg"
        app:layout_constraintBottom_toTopOf="@+id/addSleepEntryButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/averageHappinessLevelTextView" />

    <ImageButton
        android:id="@+id/addSleepEntryButton"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="#C84D02"
        android:contentDescription="Add Sleep Entry"
        android:scaleType="fitCenter"
        android:src="@drawable/add_sleep_entry"
        android:text="Add Sleep Entry"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
